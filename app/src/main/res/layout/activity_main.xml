<?xml version="1.0" encoding="utf-8"?>
<LinearLayout android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:weightSum="20"
    android:orientation="vertical"
    xmlns:android="http://schemas.android.com/apk/res/android">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1.8"
        android:orientation="horizontal"
        android:background="#6C5203"
        android:padding="5dp">

        <Button
            android:id="@+id/menutb"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:background="@drawable/ic_menutb" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="80dp"
            android:fontFamily="arial"
            android:text="Notifications"
            android:textColor="#ffffff"
            android:textSize="35sp"
            android:textStyle="bold" />

        <Button
            android:id="@+id/tb"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:layout_marginLeft="73dp"
            android:background="@drawable/ic_tb" />
    </LinearLayout>

    <ListView
        android:id="@+id/listviewtb"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="18.2"
        android:dividerHeight="5dp"
        android:divider="#98982F"
        android:background="#98982F"
        ></ListView>
</LinearLayout>
